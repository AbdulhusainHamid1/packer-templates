{
  "description": "Travis CI VMware Ubuntu Trusty base template",
  "builders": [
    {
      "type": "vmware-iso",
      "name": "vmware-ubuntu-trusty-base",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=travis<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "guest_os_type": "Ubuntu-64",
      "headless": true,
      "http_directory": "packer-assets",
      "iso_checksum": "8acd2f56bfcba2f7ac74a7e4a5e565ce68c024c38525c0285573e41c86ae90c0",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.2-server-amd64.iso",
      "skip_compaction": true,
      "ssh_username": "travis",
      "ssh_password": "travis",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'travis'|sudo -S bash 'shutdown.sh'",
      "tools_upload_flavor": "linux"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": "rm -f /var/tmp/*_rsa.pub",
      "execute_command": "echo 'travis' | sudo -S bash '{{ .Path }}'"
    },
    {
      "type": "file",
      "source": "packer-assets/apt-conf-90translations",
      "destination": "/var/tmp/apt-conf-90translations"
    },
    {
      "type": "file",
      "source": "packer-assets/docker_rsa.pub",
      "destination": "/var/tmp/docker_rsa.pub"
    },
    {
      "type": "file",
      "source": "packer-assets/travis_rsa.pub",
      "destination": "/var/tmp/travis_rsa.pub"
    },
    {
      "type": "shell",
      "inline": "cp /var/tmp/apt-conf-90translations /etc/apt/apt.conf.d/90translations",
      "execute_command": "echo 'travis' | sudo -S bash '{{ .Path }}'"
    },
    {
      "type": "shell",
      "scripts": [
        "packer-scripts/pre-chef-bootstrap",
        "packer-scripts/remove-vagrant-user",
        "packer-scripts/ubuntu-cleanup",
        "packer-scripts/minimize"
      ],
      "environment_vars": [
        "CLEAN_DEV_PACKAGES=1"
      ],
      "execute_command": "{{ .Vars }} exec sudo -E -S bash '{{ .Path }}'"
    }
  ]
}
